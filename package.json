    "release": "pnpm --filter 'pano-color-picker' release"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.8.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@7.17.1"
}
